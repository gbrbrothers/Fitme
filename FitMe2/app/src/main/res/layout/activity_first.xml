<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <fragment
        android:id="@+id/trainer_sort_fragment"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0.06"
        android:layout_margin="5dp"
        android:name="com.gbrbrothers.fitme2.TrainerSortFragment"></fragment>


    <fragment
        android:id="@+id/trainer_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.88"
        android:layout_margin="2dp"
        android:name="com.gbrbrothers.fitme2.TrainerListFragment">
    </fragment>


    <LinearLayout
        android:id="@+id/trainer_view_switch_fragment"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="25dp"
        android:layout_weight="0.06">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지도"
            android:id="@+id/switch_to_map_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필터"
            android:id="@+id/trainer_advanced_filter_button"/>

    </LinearLayout>

</LinearLayout>